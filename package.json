{
  "engines": {
    "node": ">=18.0.0"
  },

  "dependencies": {
    "@azure/storage-blob": "^12.17.0",
    "@prisma/client": "^5.7.0",
    "auth0": "^3.7.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pg": "^8.12.0",
    "prisma": "^5.13.0",
    "recharts": "^2.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "scripts": {
    "postinstall": "node prisma/load-env.js && npm run prisma:generate",
    "dev": "nodemon src/index.js",
    "start": "npm run ensure-prisma && node index.js",
    "build": "npx prisma generate",
    "ensure-prisma": "node -e \"try { require('.prisma/client') || require('@prisma/client'); console.log('✅ Prisma client available'); } catch(e) { console.log('⚠️ Generating Prisma client...'); require('child_process').execSync('npx prisma generate', {stdio: 'inherit'}); }\"",
    "migrate:deploy": "npx prisma migrate deploy || echo 'Migration failed, continuing with app startup'",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "github:setup-env": "node prisma/setup-github-env.js"
  }
}
